<%- include('./partials/head') %>
<%- include('./partials/header') %>

<body>
  <div class="main-content">
    <div id="cityData" data-cityname="<%= cityName %>"></div>
    <h3><%- cityName %></h3>
    <a style="color: black;" class="waves-effect waves-dark btn white">Add to your trip</a>

    <div style="margin-top: 4rem;" class="row">
      <div class="col s12">
        <ul class="tabs">
          <li class="tab col s3 guide-tabs"><a class="active" href="#attractions">Attractions</a></li>
          <li class="tab col s3 guide-tabs"><a href="#food-drink">Food & Drink</a></li>
          <li class="tab col s3 guide-tabs"><a href="#map">Map</a></li>
          <li class="tab col s3 guide-tabs"><a class="hotels" target="_blank">Hotel Deals<i class="material-icons" style="vertical-align: middle;">launch</i></a></li>
        </ul>
      </div>
      <div id="attractions" class="col s12">
        <div id="loader" class="progress">
          <div class="indeterminate"></div>
        </div>
        <p align="center"><iframe class="attractions" id="attractions-frame" width="1200" height="800" style="border:0;" allowfullscreen="" referrerpolicy="no-referrer-when-downgrade"></iframe></p> 
      </div>
      <div id="food-drink" class="col s12">
        <p align="center"><iframe class="foods" width="1200" height="800" style="border:0;" allowfullscreen="" referrerpolicy="no-referrer-when-downgrade"></iframe></p>
      </div>
      <div id="map">
        <p align="center"><iframe class="map" width="1200" height="800" style="border:0;" allowfullscreen="" referrerpolicy="no-referrer-when-downgrade"></iframe></p>
      </div>
    </div>
  </div>
  </div>
  <script src="/scripts/city.js"></script>
</body>
<link rel="stylesheet" href="/stylesheets/city.css">