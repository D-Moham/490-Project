<%- include('./partials/head') %>
    <%- include('./partials/header') %>

        <body>
            <div class="bg-text container">
                <h4>Personal Information</h4>
                <img src="/images/user.png" alt="Profile Picture" class="avatar">
                <h5>
                    <%= displayName %>
                </h5>

                <form method="POST" action="/profile/personal">
                    <label for="displayName">Name:</label><br>
                    <input class="center" type="text" id="displayName" name="displayName" value="<%= displayName %>" autocomplete="off">
                    <label for="username">User Name:</label><br>
                    <input class="center" type="text" id="username" name="username" value="<%= username %>" autocomplete="off">
                    <label for="homeCity">Home City</label><br>
                    <input class="center" type="text" id="homeCity" name="homeCity" value="<%= homeCity %>" autocomplete="off">
                    <button class="waves-effect waves-light btn-large btn black" type="submit">Change Personal Information & Password</button>
                </form>
            </div>

        </body>

        <link rel="stylesheet" href="/stylesheets/personal.css">